<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>List of offices</h3>
        <%= simple_form_for @office do |f| %>
          <%= f.input :price %>
          <%= f.input :adress %>
          <%= f.input :descritption %>
          <%= f.input :capacity%>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
        <%= link_to 'Edit', edit_office_path(@office) %> |
        <%= link_to 'Back', offices_path %> |
      </div>
    </div>
  </div>
</div>
