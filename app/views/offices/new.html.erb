<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="text-center mb-5 mt-3"> Let's create your own place!</h3>
        <%= simple_form_for @office do |f| %>
          <%= f.input :title, label: "Give it a name" %>
          <%= f.input :price, label: "What is the daily price you want to rent?" %>
          <%= f.input :address, label: "What is the address of the place ?" %>
          <%= f.input :description, label: "Could you describe shortly ?"%>
          <%= f.input :capacity, label: "What is the capacity?" %>
          <%= f.input :photo, as: :file, label: "Upload your photos" %>


          <%= f.submit class: 'btn-blue-new-office mb-5',  value: "Post your office"%>
        <%= link_to 'Back', offices_path %>

        <% end %>

      </div>
    </div>
  </div>
</div>
