<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All the offices in your area</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @search__home %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @offices.count %> offices out of our <%= Office.count %> on our website.</p>
      <% else %>
        <p>All <%= Office.count %> offices.count</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @offices.each do |office| %>
      <div class="col-4">
        <div class="office-card">
          <div class="office-card-image" style="background-image: url('<%= office.photo %>')"></div>
          <div class="office-card-content">
            <div class="office-card-title">
              <h4><%= office.title %></h4>
            </div>
            <p><%= office.adress %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">capacity</i><span><%= office.capacity %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">â‚¬</i> <%= office.price %>
              </div>
            </div>
          </div>
          <div class="office-card-actions">

            <%= link_to 'More info', office_path(:id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

