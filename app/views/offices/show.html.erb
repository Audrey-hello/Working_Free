 <div class="container my-5">
  <%# <div class="row"> %>
    <%# <div class="card-show-office1"> %>
    <h1 class="title-office"><%= @office.title %></h1>
  <% if @office.photos.attached? %>
            <%=cl_image_tag @office.photo.key, height: 600, width: 400, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1524758631624-e2822e304c36?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" class="image"/>
            <% end %>
        <%# </div> %>
        <div class="flex-box-office-show">

        <ul class="text-style-show">
           <h5 class="mb-3"> Détails de votre office </h5>
          <li><h6>Address :   <%= @office.address %></h6></li>
          <li><h6>Description : <%= @office.description %></h6></li>
          <li><h6>Capacity :  <%= @office.capacity %></h6></li>
          <li><h6>Price :  <%= @office.price %>€</h6></li>
        </ul>


        <div class="card-show-office">
          <%= simple_form_for [ @office, @booking ] do |f| %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start" }%>
            <%= f.submit "Book this space", class: "btn-blue mt-3" %>
           <% end %>
      </div>
    </div>
 </div>

